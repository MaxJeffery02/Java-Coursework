<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="presentation.controllers.students.StudentListController"
            prefHeight="600.0" prefWidth="900.0">

    <!-- Main Content -->
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">

        <!-- Title -->
        <Label text="Student List" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

        <!-- Table -->
        <TableView fx:id="studentsTable" prefWidth="880.0" prefHeight="500.0">
            <columns>
                <TableColumn fx:id="studentFirstNameColumn" text="First Name" prefWidth="150.0"/>
                <TableColumn fx:id="studentLastNameColumn" text="Last Name" prefWidth="150.0"/>
                <TableColumn fx:id="studentEmailColumn" text="Email" prefWidth="200.0"/>
                <TableColumn fx:id="studentCourseColumn" text="Course" prefWidth="200.0"/>
                <TableColumn fx:id="studentTypeColumn" text="Type" prefWidth="100.0"/>
                <TableColumn fx:id="studentEmployerColumn" text="Employer" prefWidth="150.0"/>
                <TableColumn fx:id="studentCountryColumn" text="Country" prefWidth="150.0"/>
            </columns>
        </TableView>

    </VBox>
</AnchorPane>
