<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="presentation.controllers.authentication.LoginController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Center VBox for form -->
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <!-- Title -->
        <Label text="Login" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

        <!-- Username Field -->
        <TextField fx:id="usernameField" promptText="Username" prefWidth="300" style="-fx-font-size: 14;"/>

        <!-- Password Field -->
        <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300" style="-fx-font-size: 14;"/>

        <!-- Login Button -->
        <Button text="Login" onAction="#handleLogin" prefWidth="150" style="-fx-font-size: 14; -fx-padding: 10 20;"/>

        <!-- Optional Footer -->
        <Label text="Forgot your password? Contact support." style="-fx-font-size: 12; -fx-text-fill: gray;"/>
    </VBox>
</AnchorPane>
